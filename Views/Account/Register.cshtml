@model RegisterModel
<div class="row">
<form asp-action="Register" asp-controller="Account" method="POST">
<table>
    <tr>
        <td>Kullanıcı Adı: </td>
        <td>
            <input type="text" asp-for="Username" placeholder="Kullanıcı Adı..."/>
        </td>
    </tr>
    <tr><td>Password: </td>
        <td>
            <input type="password" asp-for="Password" placeholder="Şifre..."/>
        </td>
        </tr>
        <tr>
        <td>Adınız Soyadınız: </td>
        <td>
            <input type="text" asp-for="FullName" placeholder="Adınız Soyadınız..."/>
        </td>
    </tr>
    <tr>
        <td>E-Mail Adresiniz: </td>
        <td>
            <input type="email" asp-for="EmailAddress" placeholder="E-Mail Adresiniz..."/>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <input type="submit" value="Üye Ol" />
        </td>
    </tr>
</table>
</form>
</div>